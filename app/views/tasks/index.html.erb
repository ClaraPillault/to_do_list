<h1>Task's List</h1>
<ul>
  <% @tasks.each do |task| %>
    <li><%= task.name %> - <%= link_to "See Task", task_path(task) %>
        <%= link_to "Edit Task", edit_task_path(task) %>
        <%= link_to "Delete Task", task_path(task), method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>
<%= link_to "Create a new Task", new_task_path %>