<%= form_for @task do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label(:not_done, "not done") %>
  <%= f.radio_button(:status, "not done", checked: true) %>
  <%= f.label(:done, "done") %>
  <%= f.radio_button(:status, "done") %>

  <%= f.submit %>
<% end %>
